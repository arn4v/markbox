{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "typeRoots": ["@types", "./node_modules/@types"],
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": ["./next-env.d.ts", "./src"],
  "exclude": ["node_modules"]
}
